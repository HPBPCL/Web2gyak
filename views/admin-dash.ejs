<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="utf-8" />
    <title>Admin Dashboard</title>
    <base href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/">
    <link href="css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <style>
        .action-btn { margin: 0 2px; }
        .dashboard-container { margin: 20px; }
    </style>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="<%= basePath %>/">Vissza a Főoldalra</a>
            <span class="navbar-text">Adminisztrációs Felület</span>
        </div>
    </nav>
    <div class="dashboard-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Játékosok Kezelése (CRUD)</h1>
            <a href="<%= basePath %>/admin/add" class="btn btn-success"><i class="fas fa-plus"></i> Új Játékos</a>
        </div>
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr><th>ID</th><th>Név</th><th>Csapat</th><th>Poszt</th><th>Érték</th><th>Műveletek</th></tr>
            </thead>
            <tbody>
                <% players.forEach(function(p) { %>
                    <tr>
                        <td><%= p.id %></td>
                        <td><%= p.vezeteknev %> <%= p.utonev %></td>
                        <td><%= p.csapatnev %></td>
                        <td><%= p.posztnev %></td>
                        <td><%= p.ertek %> €</td>
                        <td style="width: 150px;">
                            <a href="<%= basePath %>/admin/edit/<%= p.id %>" class="btn btn-warning btn-sm action-btn"><i class="fas fa-edit"></i></a>
                            <a href="<%= basePath %>/admin/delete/<%= p.id %>" class="btn btn-danger btn-sm action-btn" onclick="return confirm('Biztosan törölni akarod?');"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>